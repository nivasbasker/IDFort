<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/white" android:state_pressed="false" android:state_enabled="true">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="1dp" android:color="@color/appbar" />
        </shape>
    </item>
    <item android:color="@color/grey" android:state_enabled="false">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/dim_grey"/>
        </shape>
    </item>
</selector>
